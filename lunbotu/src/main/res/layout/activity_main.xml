<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager01"
        android:layout_width="match_parent"
        android:layout_height="190dp"></android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"

        android:orientation="horizontal"

        android:layout_marginBottom="20dp"
        android:layout_alignBottom="@+id/viewpager01"
        android:layout_height="wrap_content"></LinearLayout>
    <FrameLayout
        android:layout_above="@+id/group01"
        android:id="@+id/frame01"
        android:layout_below="@+id/viewpager01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
    <RadioGroup
        android:id="@+id/group01"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RadioButton
            android:id="@+id/radio01"
            android:layout_width="0dp"
            android:button="@null"
            android:padding="10dp"
            android:gravity="center"
            android:checked="true"
            android:background="@drawable/selector_yes"
            android:layout_weight="1"
            android:text="首页"

            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/radio02"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:padding="10dp"
            android:background="@drawable/selector_yes"
            android:gravity="center"
            android:text="发现"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/radio03"
            android:layout_width="0dp"
            android:button="@null"
            android:padding="10dp"
            android:background="@drawable/selector_yes"
            android:gravity="center"
            android:layout_weight="1"
            android:text="我"
            android:layout_height="match_parent" />
    </RadioGroup>
</RelativeLayout>
